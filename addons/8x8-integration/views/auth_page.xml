<odoo>
    <data>


         <template id="auth_page" name="Auth Page">
           <xpath expr="//head" position="inside">
             <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
            </xpath>
            <div class="container h-100">
              <div class="text-center">
                <div class="row">
                  <h1>Authorize 8x8?</h1>
                </div>
                <div class="row">
                  <div class="col-md p-40">
                    <button type="button" class="btn btn-primary">Allow</button>
                  </div>
                  <div class="col-md p-40">
                    <button type="button" class="btn btn-secondary">Deny</button>
                  </div>
                </div>
            </div>

            </div>
         </template>

    </data>
</odoo>
