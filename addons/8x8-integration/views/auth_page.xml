<odoo>
    <data>


         <template id="auth_page" name="Auth Page">
           <xpath expr="//head" position="inside">
             <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
            </xpath>
            <div class="container h-100">

                <div class="row">
                  <div class="col-lg text-center">
                    <h1>Authorize 8x8?</h1>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md">
                    <button type="button" class="btn btn-primary p-5">Allow</button>
                  </div>
                  <div class="col-md">
                    <button type="button" class="btn btn-secondary p-5">Deny</button>
                  </div>
                </div>


            </div>
         </template>

    </data>
</odoo>
