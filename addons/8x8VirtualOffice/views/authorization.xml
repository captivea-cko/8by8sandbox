<odoo>
    <data>
        <template id="authorization" name="Auth Page">
            <xpath expr="//head" position="inside">
                <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
                <title>Allow access</title>
            </xpath>

            <div class="container h-100"> <!-- Container Start -->

                <div class="row h-100">
                    <div class="col-md-4 offset-md-4 align-self-center">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title">Allow access?</h3>

                                <p class="card-text">Will you allow this application to access your Odoo user session?</p>
                                <div class="alert alert-warning" role="alert">
                                    <small>
                                        <t t-esc="redirectUrl"/>
                                    </small>
                                </div>
                                <form t-attf-action="/getsession" method="POST">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <button type="submit" name="redirect" t-att-value="redirectUrl" class="btn btn-md btn-block btn-success">Allow</button>
                                    <button type="submit" name="redirect" value="" class="btn btn-md btn-block btn-danger">Deny</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- Container End -->
        </template>
    </data>
</odoo>
